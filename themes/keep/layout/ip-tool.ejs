<div class="page-container">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <style>
        a {
            text-decoration: none;
            color: var(--default-text-color);
        }
    </style>
    <% if (theme.style.first_screen.enable === true && is_home() && !page.prev) { %>
        <%- partial('_partial/first-screen') %>
    <% } %>

    <header class="page-header">
        <div class="header-progress"></div>
    </header>

    <main class="page-main">

        <div class="page-main-content">

            <div class="page-main-content-top">
                <%- partial('_partial/header') %>
            </div>

            <div class="page-main-content-middle">

                <main class="main-content normal-code-theme">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">ipv4/v6</span>
                        </div>
                        <input type="text" id="ip" class="form-control" autocomplete="off" placeholder="请输入IP地址，如：8.8.8.8" >
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" id="ip_query">查询</button>
                        </div>
                    </div>

                    <div style="margin-top: 20px; text-align: center;">
                        <div class="spinner-border" role="status">
                            <span class="sr-only">Loading...</span>
                        </div>
                    </div>


                    <table class="table table-bordered table-hover" style="margin-top: 20px; text-align: center;">
                        <thead>
                        <tr>
                            <th scope="col" width="20%">数据</th>
                            <th scope="col">来源</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>Mark</td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Jacob</td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td>Jacob</td>
                        </tr>
                        </tbody>
                    </table>
                </main>
            </div>

            <div class="page-main-content-bottom">
                <%- partial('_partial/footer') %>
            </div>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
<script>
document.getElementById('ip_query').onclick = function (ev) {
    alert(document.getElementById('ip').value)
}
</script>
    <% if (is_post()) { %>
        <div class="sidebar-tools">
            <%- partial('_partial/tools') %>
        </div>
    <% } %>

    <div class="right-bottom-side-tools">
        <%- partial('_partial/side-tools-container') %>
    </div>

    <% if (is_post() && theme.toc.enable === true) { %>
        <!-- page aside -->
        <aside class="page-aside">
            <%- partial('_partial/toc') %>
        </aside>
    <% } %>

    <!-- image viewer -->
    <%- partial('_partial/image-viewer') %>

</div>

<% if (theme.local_search.enable) { %>
    <%- partial('_partial/local-search') %>
<% } %>


